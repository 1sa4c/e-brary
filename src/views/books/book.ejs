<div class="top">
    <h1><%= book.title %></h1>
    <div class="buttons">
        <a href="/books/<%= book.id %>/edit"><i class="fas fa-edit"></i></a>
        <%- include('../partials/deleteForm.ejs', {url: `/books/${book.id}/delete`}) %>
        <a class="fas" href="/authors/<%= book.author.id %>">View author</a>
    </div>
</div>
<div class="content-container">
    <div class="top-info">
        <img src="<%= cloudinary.url(`covers/${book.coverImage}`) %>">
        <div class="basic-info">
            <h3 class="info-item"><span>Author:</span> <span><%= book.author.name %></span></h3>
            <h3 class="info-item"><span>Publish date:</span> <span><%= book.pubDate.toDateString() %></span></h3>
            <h3 class="info-item"><span>Page count:</span> <span><%= book.pageCount %></span></h3>
        </div>
    </div>
    <div class="description">
        <h3>Description:</h3>
        <p><%= book.description %></p>
    </div>
</div>